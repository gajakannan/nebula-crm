# Nebula CRM - Environment Template
# Copy to .env and fill with real values. Do NOT commit secrets.

# Runtime
APP_ENVIRONMENT=development
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development

# Server
PORT=8080
API_BASE_URL=http://localhost:8080

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nebula

# Auth (Keycloak)
KEYCLOAK_URL=http://localhost:8081
KEYCLOAK_REALM=nebula
KEYCLOAK_CLIENT_ID=nebula-crm
KEYCLOAK_CLIENT_SECRET=replace_me
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_me

# AI / LLM
ANTHROPIC_API_KEY=replace_me

# Observability
LOG_LEVEL=info
