{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nebula.local/schemas/task-update-request.schema.json",
  "title": "TaskUpdateRequest",
  "description": "Validation rules for updating a task.",
  "type": "object",
  "minProperties": 1,
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "maxLength": 2000
    },
    "status": {
      "type": "string",
      "enum": ["Open", "InProgress", "Done"]
    },
    "priority": {
      "type": "string",
      "enum": ["Low", "Normal", "High", "Urgent"]
    },
    "dueDate": {
      "type": ["string", "null"],
      "format": "date"
    },
    "assignedTo": {
      "type": "string",
      "description": "If provided, must match authenticated subject in MVP."
    }
  },
  "additionalProperties": false
}
