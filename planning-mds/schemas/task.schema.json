{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nebula.local/schemas/task.schema.json",
  "title": "Task",
  "description": "Task entity.",
  "type": "object",
  "required": [
    "id",
    "title",
    "status",
    "priority",
    "assignedTo",
    "createdAt"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": ["string", "null"]
    },
    "status": {
      "type": "string",
      "enum": ["Open", "InProgress", "Done"]
    },
    "priority": {
      "type": "string",
      "enum": ["Low", "Normal", "High", "Urgent"]
    },
    "dueDate": {
      "type": ["string", "null"],
      "format": "date"
    },
    "assignedTo": {
      "type": "string"
    },
    "linkedEntityType": {
      "type": ["string", "null"]
    },
    "linkedEntityId": {
      "type": ["string", "null"],
      "format": "uuid"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "completedAt": {
      "type": ["string", "null"],
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
